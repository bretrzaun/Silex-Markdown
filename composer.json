{
    "name": "bretrzaun/silex-markdown",
    "description": "A lightweight markdown service provider for Silex",
    "keywords": ["silex", "markdown"],
    "homepage": "http://github.com/bretrzaun/silex-markdown",
    "license": "MIT",
    "authors": [
        {
            "name": "Bret R. Zaun",
            "email": "bretrzaun@hotmail.com"
        }
    ],
    "require": {
        "php" : ">=7.0",
        "silex/silex": "^2.0",
        "michelf/php-markdown" : "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "twig/twig": "^1.18"
    },
    "suggest": {
	    "twig/twig": "enables parsing markdown right from the template using simple filter"
    },
    "autoload": {
        "psr-4": {
            "BretRZaun\\": "src/"
        }
    },
    "scripts" : {
        "test" : "phpunit"
    }
}
